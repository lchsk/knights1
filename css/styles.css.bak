#canvas-wrap { position:relative } /* Make this a positioned parent */
#overlay     { position:absolute; top:20px; left:30px; }

/**
* Div containing all kinds of menu data
*/
div.menu-page{
    background-color: rgba(255, 255, 255, 0.5);
    
    -moz-border-radius: 10px;
    border-radius: 10px;
    
    font-family: Arial, sans-serif;
    font-size: 13px;
    
   /* width: 30%;*/
    margin-left: 10%;
    margin-top: 5%;
    padding: 20px;
	display: inline-block;
}

div.register-page{
    background-color: rgba(255, 255, 255, 0.5);
    
    -moz-border-radius: 10px;
    border-radius: 10px;
    
    font-family: Arial, sans-serif;
    font-size: 13px;
    
    width: 40%;
    margin-left: auto;
    margin-right: auto;
    padding: 20px;
	display: block;
}

div.naglowek{
	position: center; 
	width: 100%;
	text-align: center; 
}
div.gameBox{
	border-style:solid;
	-moz-border-radius:5px; /* FF */
	-webkit-border-radius:5px; /* przegl퉐arki z webkitem (Safari, Chrome itp.) */
	-khtml-border-radius:5px; /* przegl퉐arki typu K-meleon (typowo Linuxowe) */
	border-radius:5px; /* pozosta쿮 przegl퉐arki */
	behavior:url(border-radius.htc); /* dodatek dla badzIEwnej przegl퉐arki */	
	border-color:gold;
	border-width:5px;
	margin-left:20px;
	margin-right:20px;
}

div.menu{
	overflow:hidden;
	margin:20px;
}

div.left{
	float:left;
}

div.login {
    font-size: +2;
}

div.register {
    font-size: 11px;
}

div.error {
    font-size: 24px;
	color: red;
}

a:link, a:hover  {
	color:blue;
} 

a:active,a:visited   {
	color:blue;
} 

input.login {
	display: block;
    margin-left: auto;
    margin-right: auto;
	min-width:30%;
}